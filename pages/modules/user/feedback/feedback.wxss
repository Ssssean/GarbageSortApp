page {
    background-color: #f5f5f5;
}

.feedback-picker-box {
    background-color: #fff;
    border-bottom: 10rpx solid #f5f5f5;
}

.feedback-picker-name {
    font-size: 28rpx;
    color: #27323f;
}

.feedback-picker {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.feedback-picker picker {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #27323f;
}

.feedback-picker .picker {
    height: 120rpx;
    width: 500rpx;
    display: flex;
    align-items: center;
}

.feedback-picker span {
    position: absolute;
    right: 50rpx;
}

.feedback-textarea-box {
    background-color: #fff;
    padding: 15px 0;
}

.feedback-textarea-box textarea {
    width: 88%;
    height: 300rpx;
    margin: 0 auto;
    border: 2rpx solid #f5f5f5;
    border-radius: 6rpx;
    padding: 10rpx;
    font-size: 28rpx;
    color: #27323f;
}

.feedback-phone-box {
    font-size: 28rpx;
    color: #27323f;
    background-color: #fff;
}

.feedback-button {
    background-color: #fff;
    height: 100rpx;
    margin: 0 auto;
    text-align: center;
    line-height: 100rpx;
    border-radius: 4rpx;
    font-size: 30rpx;
    margin-top: 40rpx;
    color: #fff;
    background-color: #3295e6;
    width: 95%;
}