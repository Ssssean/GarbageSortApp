/* pages/modules/ recover/recover.wxss */

.recoveryProcess {
    width: 90%;
    height: 40%;
    margin: 10rpx auto;
}

.help {
    width: 700rpx;
    margin: 0 auto;
}

.help .help_item {
    margin: 10rpx auto;
}

.help .help_item .title {
    font-size: 30rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: #fff;
    display: flex;
}

.help .help_item .title .title_1 {
    width: 630rpx;
    height: 60rpx;
    padding-left: 20rpx;
}

.help .help_item .title .title_2 {
    width: 50rpx;
    height: 60rpx;
    text-align: center;
}

.help .help_item .title .title_2 image {
    width: 40rpx;
    height: 40rpx;
    margin: 10rpx auto;
}

.help .help_item .detail {
    margin: 10rpx auto;
    font-size: 25rpx;
    line-height: 40rpx;
    text-indent: 2em;
    background-color: #e2e2e2;
}

.bottom {
    text-align: center;
    margin-top: 50px;
}

.order {
    position: absolute;
    bottom: 3%;
    right: 3%;
    background-color: #34BE79;
    border-radius: 40rpx;
    width: 130px;
    text-align: center;
    font-size: 17px;
    padding: 10rpx;
    color: #fff;
}

.ui-accordion .header .arrow {
    right: 8px;
}

.title {
    width: 100%;
    background-color: #fff;
    font-size: 14px;
}

.title .state {
    border: 1px solid #797979;
    width: 100%;
    height: 30px;
    color: #797979;
    font-size: 12px;
}

.state.abnormal {
    border: 1px solid #F5AC29;
    color: #F5AC29;
}

.state.normal {
    border: 1px solid #2AA744;
    color: #2AA744;
}

.content {
    background-color: #F6F6F6;
    font-size: 14px;
    border-bottom: 1px solid #fff;
}

.accordion {
    margin: 0 40rpx;
}

.news-title {
    font-size: 35rpx;
    font-weight: bold;
    margin-top: 20px;
}