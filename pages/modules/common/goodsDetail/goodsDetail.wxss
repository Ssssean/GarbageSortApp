/* pages/modules/common/goodsDetail/goodsDetail.wxss */



.blank{
  width: 100%;
  height: 2%;
  background-color: #eee;
}



.exchange{
  height: 7%;
  width: 100%;
  background-color: #34BE79;
  position: fixed;
  bottom:0;
  text-align: center;
  font-size: 16px;
  line-height: 95rpx;
  color: #fff;
}

.exchangeDetail{
  display: flex;
  height: 90px;
  width: 100%;
  background-color: #fff;
}

.exchangeGoodsImage{
  flex: 0.6;
  margin: 7px;
  width: 85%;
  height: 85%;
}

.exchangeGoods{
  flex:1;
  display: flex;
  flex-direction: column;
  margin:5rpx;
}

.exchangeGoods>.goodsType,.exchangeGoods>.goodsPrice{
  display: flex;
  line-height: 1;
  flex:1;
  align-items: center;
}

.count{
  height: 50px;
  background-color: #fff;
  display: flex;
  border-top:1px solid #7f7f7f;
  padding: 3px 8px;
}

.count>.countText{
  flex: 1;
  text-align: left;
  line-height: 300%;
}

.count>.countdeal{
  flex: 1;
  line-height: 280%;
  text-align: right;
}

.confirm{
  height: 33%;
  width: 100%;
  background-color: #34BE79;
  text-align: center;
  vertical-align: middle;
  font-size: 16px;
  line-height: 2.5;
  color: #fff;
}